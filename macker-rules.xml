<?xml version="1.0"?>
<!DOCTYPE macker PUBLIC "-//innig//DTD Macker 0.4//EN" "http://innig.net/macker/dtd/macker-0.4.dtd">
<macker>
    <ruleset>
        <access-rule>
            <message>Requirements-Package only allow to use inner-classes and classes from com.evatool.global</message>
            <deny>
                <from class="com.evatool.requirements.**"/>
                <to class="com.evatool.**"/>
                <allow>
                    <to class="com.evatool.global.**"/>
                </allow>
                <allow>
                    <to class="com.evatool.requirements.**"/>
                </allow>
            </deny>
        </access-rule>
        <access-rule>
            <message>Analysis-Package only allow to use inner-classes and classes from com.evatool.global</message>
            <deny>
                <from class="com.evatool.analysis.**"/>
                <to class="com.evatool.**"/>
                <allow>
                    <to class="com.evatool.global.**"/>
                </allow>
                <allow>
                    <to class="com.evatool.analysis.**"/>
                </allow>
            </deny>
        </access-rule>
        <access-rule>
            <message>Impact-Package only allow to use inner-classes and classes from com.evatool.global</message>
            <deny>
                <from class="com.evatool.impact.**"/>
                <to class="com.evatool.**"/>
                <allow>
                    <to class="com.evatool.global.**"/>
                </allow>
                <allow>
                    <to class="com.evatool.impact.**"/>
                </allow>
            </deny>
        </access-rule>
        <access-rule>
            <message>Variants-Package only allow to use inner-classes and classes from com.evatool.global</message>
            <deny>
                <from class="com.evatool.variants.**"/>
                <to class="com.evatool.**"/>
                <allow>
                    <to class="com.evatool.global.**"/>
                </allow>
                <allow>
                    <to class="com.evatool.variants.**"/>
                </allow>
            </deny>
        </access-rule>
    </ruleset>
</macker>